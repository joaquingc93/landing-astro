<style>
  /* Page-specific optimizations */
  .container {
    contain: layout style;
  }
  
  /* Smooth scroll behavior for section navigation */
  html {
    scroll-padding-top: 80px;
  }
  
  /* Critical path performance optimization */
  section {
    contain: layout style paint;
  }
  
  /* Intersection Observer animation triggers */
  .animate-on-scroll {
    opacity: 0;
    transform: translateY(20px);
    transition: all 0.6s cubic-bezier(0.4, 0, 0.2, 1);
  }
  
  .animate-on-scroll.animate-fade-in {
    opacity: 1;
    transform: translateY(0);
  }
  
  /* Gradient text effect */
  .gradient-text {
    background: linear-gradient(135deg, #2563eb 0%, #0ea5e9 50%, #facc15 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    color: transparent;
  }

  /* How It Works enhancements */
  .how-step { position:relative; overflow:hidden; transition:box-shadow .35s, transform .35s; }
  .how-step::before { content:""; position:absolute; inset:0; background:linear-gradient(135deg,rgba(59,130,246,0.08),rgba(14,165,233,0.05)); opacity:0; transition:opacity .35s; }
  .how-step:hover::before { opacity:1; }
  .how-step:hover { box-shadow:0 12px 32px -8px rgba(0,0,0,.15), 0 4px 12px -2px rgba(0,0,0,.08); transform:translateY(-4px); }
  .step-badge { width:4rem; height:4rem; border-radius:9999px; display:flex; align-items:center; justify-content:center; font-size:1.5rem; font-weight:700; margin:0 auto 1.5rem; box-shadow:0 6px 18px -4px rgba(0,0,0,.25); position:relative; }
  .counter-howitworks { counter-reset: hiw; }
  .how-step:focus-visible { outline:3px solid #2563eb; outline-offset:4px; }
  @media (prefers-reduced-motion:reduce){ .how-step, .how-step::before { transition:none !important; } }
  @media (max-width: 640px){ .step-badge{ width:3.25rem; height:3.25rem; font-size:1.25rem; } }
  
  /* Enhanced focus states for accessibility */
  a:focus-visible,
  button:focus-visible {
    outline: 3px solid #2563eb;
    outline-offset: 2px;
    border-radius: 4px;
  }
  
  /* Performance: GPU acceleration for animations */
  .animate-on-scroll,
  .btn-primary,
  .btn-secondary {
    will-change: transform;
  }
</style>
