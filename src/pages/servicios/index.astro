---
import Layout from '@/layouts/Layout.astro';
import ServicesGrid from '@/components/ServicesGrid.astro';
import { wordpressClient, getStaticProps, createFallbackData } from '@/lib/wordpress-client';

// Fetch all services
const services = await getStaticProps(
  () => wordpressClient.getAllServices(),
  createFallbackData().services
);

// Page metadata
const pageTitle = 'Our Services - Professional Remodeling in Florida | RenovaLink';
const pageDescription = 'Comprehensive remodeling services including pool renovation, concrete work, residential cleaning, and certified structural engineering throughout Florida.';

// Structured data for services page
const servicesStructuredData = {
  "@context": "https://schema.org",
  "@type": "Service",
  "name": "RenovaLink Remodeling Services",
  "description": pageDescription,
  "provider": {
    "@type": "LocalBusiness",
    "name": "RenovaLink",
    "url": "https://renovalink.com",
    "address": {
      "@type": "PostalAddress",
      "addressRegion": "FL",
      "addressCountry": "US"
    }
  },
  "areaServed": {
    "@type": "State",
    "name": "Florida"
  },
  "hasOfferCatalog": {
    "@type": "OfferCatalog",
    "name": "Remodeling Services",
    "itemListElement": services.map((service, index) => ({
      "@type": "Offer",
      "position": index + 1,
      "itemOffered": {
        "@type": "Service",
        "name": service.title.rendered,
        "description": service.excerpt?.rendered?.replace(/<[^>]*>/g, '') || '',
        "url": `https://renovalink.com/servicios/${service.slug}`
      }
    }))
  }
};
---

<Layout
  title={pageTitle}
  description={pageDescription}
  canonical="https://renovalink.com/servicios"
  type="website"
  schema={servicesStructuredData}
>
  
  <!-- Hero Section -->
  <section class="pt-20 pb-16 bg-gradient-to-br from-primary-600 via-primary-700 to-primary-800 text-white relative overflow-hidden">
    
    <!-- Background Pattern -->
    <div class="absolute inset-0 opacity-10">
      <svg width="60" height="60" viewBox="0 0 60 60" class="w-full h-full">
        <defs>
          <pattern id="services-grid" width="60" height="60" patternUnits="userSpaceOnUse">
            <path d="m 60,0 L 0,0 0,60" fill="none" stroke="white" stroke-width="1"/>
          </pattern>
        </defs>
        <rect width="100%" height="100%" fill="url(#services-grid)" />
      </svg>
    </div>
    
    <div class="container relative z-10">
      <div class="max-w-4xl mx-auto text-center">
        
        <!-- Breadcrumb -->
        <nav class="mb-8" aria-label="Breadcrumb">
          <ol class="flex items-center justify-center space-x-2 text-sm text-primary-200">
            <li><a href="/" class="hover:text-white transition-colors">Home</a></li>
            <li><span class="mx-2">/</span></li>
            <li class="text-white font-medium">Services</li>
          </ol>
        </nav>
        
        <!-- Service Category Badge -->
        <div class="mb-6">
          <span class="inline-flex items-center px-4 py-2 bg-white/10 backdrop-blur-sm rounded-full text-sm font-medium text-primary-100 border border-white/20">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
            </svg>
            Professional Services
          </span>
        </div>
        
        <!-- Page Title -->
        <h1 class="heading-xl mb-6 text-white animate-on-scroll">
          Complete Remodeling 
          <span class="block text-secondary-400 mt-2">Solutions for Florida</span>
        </h1>
        
        <!-- Page Description -->
        <p class="text-xl text-primary-100 mb-8 max-w-3xl mx-auto animate-on-scroll">
          From pool transformations to structural engineering, RenovaLink delivers exceptional craftsmanship 
          and professional service throughout Florida. Licensed, certified, and guaranteed.
        </p>
        
        <!-- Trust Indicators -->
        <div class="flex flex-wrap justify-center items-center gap-8 text-primary-200 animate-on-scroll">
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5 text-secondary-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
            <span class="text-sm font-medium">Licensed & Insured</span>
          </div>
          
          <!-- Removed second metric block entirely -->
          
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5 text-secondary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <span class="text-sm font-medium">15+ Years Experience</span>
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Services Grid -->
  <section class="py-20 bg-gradient-to-br from-neutral-50 to-primary-50/30">
    <div class="container">
      <div class="text-center mb-16">
        <h2 class="heading-lg gradient-text mb-6 animate-on-scroll">Our Specialized Services</h2>
        <p class="text-xl text-neutral-600 max-w-3xl mx-auto animate-on-scroll">
          Each service is delivered by certified professionals with decades of combined experience in Florida's unique market.
        </p>
      </div>
      
      <ServicesGrid services={services} />
    </div>
  </section>
  
  <!-- Service Areas -->
  <section class="py-20 bg-white">
    <div class="container">
      <div class="text-center mb-16">
        <h2 class="heading-lg mb-6 animate-on-scroll">Service Areas in South Florida</h2>
        <p class="text-xl text-neutral-600 max-w-3xl mx-auto animate-on-scroll">
          Focused coverage in Miami-Dade and Broward Counties to ensure faster turnaround and consistent quality.
        </p>
      </div>
      
  <div class="grid grid-cols-1 sm:grid-cols-2 gap-6 max-w-xl mx-auto justify-items-center">
        {[
          'Miami-Dade County',
          'Broward County'
        ].map((area, index) => (
          <div class={`card p-6 text-center hover:shadow-lg transition-shadow duration-300 animate-on-scroll stagger-${(index % 4) + 1}`}>
            <svg class="w-8 h-8 text-primary-600 mx-auto mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
            <h3 class="font-semibold text-neutral-900 text-sm">{area}</h3>
          </div>
        ))}
      </div>
      
      <div class="text-center mt-12">
        <p class="text-neutral-600 mb-6">Don't see your area? Contact us - we may still be able to help!</p>
        <a href="/contacto" class="btn-primary text-lg px-8 py-4">
          Check Service Availability
        </a>
      </div>
    </div>
  </section>
  
  <!-- Why Choose Us -->
  <section class="py-20 bg-gradient-to-br from-primary-50 to-primary-100">
    <div class="container">
      <div class="text-center mb-16">
        <h2 class="heading-lg mb-6 animate-on-scroll">Why Choose RenovaLink?</h2>
        <p class="text-xl text-neutral-600 max-w-3xl mx-auto animate-on-scroll">
          We're not just contractors - we're your partners in creating the space you've always dreamed of.
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        
        <!-- Quality Assurance -->
        <div class="card p-8 text-center animate-on-scroll">
          <div class="w-16 h-16 bg-primary-600 rounded-full flex items-center justify-center mx-auto mb-6">
            <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
          </div>
          <h3 class="text-xl font-semibold mb-4">Quality Guarantee</h3>
          <p class="text-neutral-600">Every project comes with our comprehensive quality guarantee and warranty coverage.</p>
        </div>
        
        <!-- Certified Professionals -->
        <div class="card p-8 text-center animate-on-scroll">
          <div class="w-16 h-16 bg-secondary-400 rounded-full flex items-center justify-center mx-auto mb-6">
            <svg class="w-8 h-8 text-neutral-900" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z" />
            </svg>
          </div>
          <h3 class="text-xl font-semibold mb-4">Certified Engineers</h3>
          <p class="text-neutral-600">Our team includes Florida-certified civil engineers ensuring code compliance.</p>
        </div>
        
        <!-- Transparent Pricing -->
        <div class="card p-8 text-center animate-on-scroll">
          <div class="w-16 h-16 bg-primary-600 rounded-full flex items-center justify-center mx-auto mb-6">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <h3 class="text-xl font-semibold mb-4">Transparent Pricing</h3>
          <p class="text-neutral-600">No hidden fees or surprise costs. Detailed estimates provided upfront.</p>
        </div>
        
        <!-- Fast Response -->
        <div class="card p-8 text-center animate-on-scroll">
          <div class="w-16 h-16 bg-secondary-400 rounded-full flex items-center justify-center mx-auto mb-6">
            <svg class="w-8 h-8 text-neutral-900" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <h3 class="text-xl font-semibold mb-4">Fast Response</h3>
          <p class="text-neutral-600">Quick response times and efficient project completion without compromising quality.</p>
        </div>
        
        <!-- Personalized Service -->
        <div class="card p-8 text-center animate-on-scroll">
          <div class="w-16 h-16 bg-primary-600 rounded-full flex items-center justify-center mx-auto mb-6">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
            </svg>
          </div>
          <h3 class="text-xl font-semibold mb-4">Personal Touch</h3>
          <p class="text-neutral-600">Every project gets dedicated attention with clear communication throughout.</p>
        </div>
        
        <!-- Emergency Service -->
        <div class="card p-8 text-center animate-on-scroll">
          <div class="w-16 h-16 bg-red-600 rounded-full flex items-center justify-center mx-auto mb-6">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <h3 class="text-xl font-semibold mb-4">Emergency Service</h3>
          <p class="text-neutral-600">24/7 emergency response available for urgent repairs and water damage.</p>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Call to Action -->
  <section class="py-20 bg-gradient-to-br from-primary-600 to-primary-800 text-white">
    <div class="container text-center">
      <h2 class="heading-md mb-6 animate-on-scroll">Ready to Start Your Project?</h2>
      <p class="text-xl text-primary-100 mb-8 max-w-3xl mx-auto animate-on-scroll">
        Contact us today for a free consultation and detailed estimate. Let's discuss how we can transform your space.
      </p>
      
      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center animate-on-scroll">
        <a href="/contacto" class="btn-secondary text-lg px-8 py-4 shadow-2xl">
          Get Free Consultation
          <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
          </svg>
        </a>
        <!-- Removed Call button per request -->
      </div>
    </div>
  </section>
  
</Layout>

<!-- JSON-LD structured data -->
<script type="application/ld+json" set:html={JSON.stringify(servicesStructuredData)}></script>