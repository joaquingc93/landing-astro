  description="South Florida remodeling specialists serving Miami-Dade & Broward: pool renovations, concrete & flooring, residential cleaning and technical support. Licensed, insured & quality focused."
  canonical="https://renovalink.com"
  type="website"
  schemas={schemas}
>
  
  <!-- Hero Section -->
  <Hero />
  
  <!-- Services Overview -->
  <section id="services" class="py-20 bg-gradient-to-br from-neutral-50 to-primary-50/30">
