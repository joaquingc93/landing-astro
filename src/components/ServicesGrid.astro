---
import { stripHtml, truncateText } from '@/lib/utils';
import { ACFHelpers } from '@/lib/wordpress-client';
import type { Service } from '@/schemas/wordpress';

export interface Props {
  services: Service[];
}

const { services } = Astro.props;

// Process services to convert ACF free fields to arrays
const processedServices = services.map((service) => {
  if (!service.acf) return service;
  
  // Convert individual feature fields to array
  const features = [];
  for (let i = 1; i <= 5; i++) {
    const feature = service.acf[`service_feature_${i}`];
    if (feature && feature.trim()) {
      features.push(feature);
    }
  }
  
  return {
    ...service,
    acf: {
      ...service.acf,
      service_features: features
    }
  };
});

// Reorder services to put Pool remodeling first
const reorderedServices = [...processedServices].sort((a, b) => {
  if (a.slug === 'pool-remodeling') return -1;
  if (b.slug === 'pool-remodeling') return 1;
  return 0;
});

// Service icons mapping
const serviceIcons = {
  'pool-remodeling': 'M13 2L3 14h9l-1 8 10-12h-9l1-8z', // Pool/water icon
  'concrete-flooring': 'M19 21H5a2 2 0 01-2-2V5a2 2 0 012-2h14a2 2 0 012 2v14a2 2 0 01-2 2z', // Floor/construction
  'residential-cleaning': 'M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16', // Cleaning
  'technical-support': 'M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16l3.5-2 3.5 2 3.5-2 3.5 2z' // Document/plans
};

// Service color schemes
const serviceColors = [
  'from-blue-500 to-blue-700',
  'from-green-500 to-green-700', 
  'from-purple-500 to-purple-700',
  'from-orange-500 to-orange-700'
];
---

<!-- Services Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      {reorderedServices.slice(0, 4).map((service, index) => {
        const icon = serviceIcons[service.slug as keyof typeof serviceIcons] || serviceIcons['technical-support'];
        const description = service.acf?.short_description || stripHtml(service.excerpt?.rendered || service.content?.rendered || '');
        
        return (
          <div class={`group card-hover animate-on-scroll stagger-${index + 1}`}>
            
            <!-- Service Icon -->
            <div class="p-6 text-center">
              <div class="inline-flex items-center justify-center w-20 h-20 bg-white rounded-2xl mb-4 group-hover:scale-110 transition-transform duration-300 shadow-lg border border-neutral-200">
                {service.acf_fields?.service_icon?.url ? (
                  <img 
                    src={service.acf_fields.service_icon.url} 
                    alt={service.acf_fields.service_icon.alt || 'Service icon'} 
                    class="w-14 h-14 object-contain"
                  />
                ) : (
                  <svg class={`w-10 h-10 text-white`} fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d={icon} />
                  </svg>
                )}
              </div>
              
              <!-- Service Title -->
              <h3 class="text-xl font-semibold text-neutral-900 mb-3 group-hover:text-primary-600 transition-colors duration-300">
                {service.title.rendered}
              </h3>
              
              <!-- Service Description -->
              <p class="text-neutral-600 text-sm leading-relaxed mb-6">
                {truncateText(description, 120)}
              </p>
              
              <!-- Service Features -->
              {service.acf?.service_features && (
                <ul class="text-left space-y-2 mb-6">
                  {service.acf.service_features.slice(0, 3).map(feature => (
                    <li class="flex items-center text-sm text-neutral-600">
                      <svg class="w-4 h-4 text-green-500 mr-2 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                      </svg>
                      {feature}
                    </li>
                  ))}
                </ul>
              )}
              
              <!-- Price Range -->
              {service.acf?.price_range && (
                <div class="mb-4">
                  <span class="inline-flex items-center px-3 py-1 bg-neutral-100 text-neutral-700 rounded-full text-xs font-medium">
                    {service.acf.price_range}
                  </span>
                </div>
              )}
              
              <!-- Learn More Button -->
              <a 
                href={`/servicios/${service.slug}`}
                class="inline-flex items-center justify-center w-full px-4 py-3 bg-white border border-neutral-200 rounded-lg text-neutral-700 font-medium hover:bg-primary-50 hover:border-primary-200 hover:text-primary-700 transition-all duration-300 group-hover:shadow-md"
              >
                Learn More
                <svg class="w-4 h-4 ml-2 transform group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              </a>
            </div>
            
            <!-- Hover Effect Overlay -->
            <div class="absolute inset-0 bg-gradient-to-br from-primary-500/0 to-primary-600/0 group-hover:from-primary-500/5 group-hover:to-primary-600/10 rounded-xl transition-all duration-300 pointer-events-none"></div>
          </div>
        );
      })}
    </div>

    
  <!-- View All Services CTA -->
  <div class="text-center mt-12">
    <a 
      href="/servicios"
      class="btn-outline inline-flex items-center px-8 py-4 text-lg"
    >
      View All Services
      <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
      </svg>
    </a>
  </div>

<style>
  /* Service card enhancements */
  .card-hover {
    position: relative;
    overflow: hidden;
  }
  
  .card-hover::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 2px;
    background: linear-gradient(90deg, transparent, #3b82f6, transparent);
    transition: left 0.5s;
  }
  
  .card-hover:hover::before {
    left: 100%;
  }
  
  /* Stagger animation delays */
  .animate-on-scroll.stagger-1 { animation-delay: 0.1s; }
  .animate-on-scroll.stagger-2 { animation-delay: 0.2s; }
  .animate-on-scroll.stagger-3 { animation-delay: 0.3s; }
  .animate-on-scroll.stagger-4 { animation-delay: 0.4s; }
  
  /* Performance optimizations */
  .card-hover {
    will-change: transform;
    contain: layout style paint;
  }
  
  /* Hover performance */
  @media (hover: hover) {
    .group:hover .group-hover\:scale-110 {
      transform: scale(1.1);
    }
    
    .group:hover .group-hover\:translate-x-1 {
      transform: translateX(0.25rem);
    }
  }
</style>