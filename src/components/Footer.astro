---
import { wordpressClient, getStaticProps } from '@/lib/wordpress-client';
import type { CompanyInfo } from '@/schemas/wordpress';

// Use fallback company info (WordPress endpoint not implemented yet)
const companyInfo = await getStaticProps<CompanyInfo | null>(
  () => Promise.resolve(null), // Skip WordPress call for now
  {
    name: 'RenovaLink',
    description: 'Premier remodeling services in Florida',
    phone: '(XXX) XXX-XXXX',
    email: 'info@renovalink.com',
    address: 'Florida, USA',
    social_media: {
      facebook: 'https://facebook.com/renovalink',
      instagram: 'https://instagram.com/renovalink',
    },
    business_hours: [
      { day: 'Monday - Friday', hours: '8:00 AM - 6:00 PM' },
      { day: 'Saturday', hours: '9:00 AM - 4:00 PM' },
      { day: 'Sunday', hours: 'Closed' },
    ],
    license_info: {
      license_number: 'FL-LICENSE-XXXX',
      certifications: ['Licensed & Insured', 'Certified Engineers'],
    },
  }
);

const currentYear = new Date().getFullYear();

const services = [
  { name: 'Pool Remodeling', href: '/servicios/pool-remodeling' },
  { name: 'Concrete & Flooring', href: '/servicios/concrete-flooring' },
  { name: 'Residential Cleaning', href: '/servicios/residential-cleaning' },
  { name: 'Technical Support', href: '/servicios/technical-support' },
];

const quickLinks = [
  { name: 'Home', href: '/' },
  { name: 'About Us', href: '/about' },
  { name: 'Services', href: '/servicios' },
  { name: 'Projects', href: '/projects' },
  { name: 'Contact', href: '/contacto' },
];
---

<footer class="bg-neutral-900 text-neutral-300">
  <!-- Main footer content -->
  <div class="max-w-4xl mx-auto px-6">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-12 py-12 text-center md:text-left">
        <!-- Services -->
        <div>
          <h4 class="text-lg font-semibold text-white mb-4">Our Services</h4>
          <ul class="space-y-2">
            {services.map(service => (
              <li>
                <a 
                  href={service.href} 
                  class="hover:text-primary-400 transition-colors flex items-center gap-2 justify-center md:justify-start"
                >
                  <span class="w-1 h-1 bg-primary-400 rounded-full"></span>
                  {service.name}
                </a>
              </li>
            ))}
          </ul>
        </div>
        
        <!-- Quick Links -->
        <div>
          <h4 class="text-lg font-semibold text-white mb-4">Quick Links</h4>
          <ul class="space-y-2">
            {quickLinks.map(link => (
              <li>
                <a 
                  href={link.href} 
                  class="hover:text-primary-400 transition-colors flex items-center gap-2 justify-center md:justify-start"
                >
                  <span class="w-1 h-1 bg-primary-400 rounded-full"></span>
                  {link.name}
                </a>
              </li>
            ))}
          </ul>
        </div>
      </div>
    
    <!-- Social Media & Bottom Bar -->
    <div class="border-t border-neutral-800 py-6">
      <div class="max-w-4xl mx-auto px-6 flex flex-col sm:flex-row justify-between items-center gap-4">
        
        <!-- Social Media -->
        {companyInfo?.social_media && (
          <div class="flex items-center gap-4">
            {companyInfo.social_media.facebook && (
              <a 
                href={companyInfo.social_media.facebook}
                target="_blank"
                rel="noopener noreferrer"
                class="text-neutral-400 hover:text-primary-400 transition-colors"
                aria-label="Facebook"
              >
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z" />
                </svg>
              </a>
            )}
            
            {companyInfo.social_media.instagram && (
              <a 
                href={companyInfo.social_media.instagram}
                target="_blank"
                rel="noopener noreferrer"
                class="text-neutral-400 hover:text-primary-400 transition-colors"
                aria-label="Instagram"
              >
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12.017 0C5.396 0 .029 5.367.029 11.987c0 6.62 5.367 11.987 11.988 11.987 6.62 0 11.987-5.367 11.987-11.987C24.014 5.367 18.637.001 12.017.001zM8.449 16.988c-1.297 0-2.448-.961-2.448-2.34 0-1.297.961-2.247 2.247-2.247.961 0 1.753.698 1.948 1.613.117-.961-.78-1.948-1.948-1.948-.78 0-1.378-.598-1.378-1.378 0-.78.598-1.378 1.378-1.378.78 0 1.378.598 1.378 1.378z" />
                </svg>
              </a>
            )}
            
            {companyInfo.social_media.linkedin && (
              <a 
                href={companyInfo.social_media.linkedin}
                target="_blank"
                rel="noopener noreferrer"
                class="text-neutral-400 hover:text-primary-400 transition-colors"
                aria-label="LinkedIn"
              >
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z" />
                </svg>
              </a>
            )}
          </div>
        )}
        
        <!-- Copyright -->
        <div class="text-sm text-neutral-400">
          © {currentYear} {companyInfo?.name || 'RenovaLink'}. All rights reserved.
        </div>
      </div>
    </div>
  </div>
  
  <!-- Emergency Contact Banner (optional) -->
  <div class="bg-primary-600 text-white py-2">
    <div class="max-w-4xl mx-auto px-6 text-center">
      <span class="text-sm font-medium">
        24/7 Emergency Services Available • Call {companyInfo?.phone}
      </span>
    </div>
  </div>
</footer>